@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<div class="text-center">
    <h1 class="display-4">Clientes</h1>
</div>
<div class="row">
    <div class="col-2">
        <p class="form-label">Nombre</p>
        <input type="text" id="nombre_cliente" name="nombre_cliente" maxlength="100" required />
    </div>
    <div class="col-2">
        <p class="form-label">Tipo de documento</p>
        <select id="tipo_documento" name="tipo_documento" required>
            <option value="cc">C.C.</option>
            <option value="ce">C.E</option>
            <option value="pasaporte">Pasaporte</option>
            <option value="nit">NIT</option>
        </select>
    </div>
    <div class="col-2">
        <p class="form-label">Número de identificación</p>
        <input type="text" id="num_identificacion" name="num_identificacion" maxlength="10" />
    </div>
    <div class="col-2">
        <p class="form-label">Número de telefono</p>
        <input type="number" id="num_telefono" name="num_telefono" maxlength="10" />
    </div>
    <div class="col-2">
        <p class="form-label">Correo electrónico</p>
        <input type="text" id="correo" name="correo" required />
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <p class="form-label">Observaciones</p>
        <textarea id="observaciones" name="observaciones" rows="4" cols="50"></textarea>
    </div>
</div>
<div class="row">
    <div class="col-2 offset-md-5">
        <input type="submit" />
    </div>
</div>

